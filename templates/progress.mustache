{{!
    @template report_myfeedback/progress

    This template renders a progress GIF.

    Variables required for this template:
    * progressimg - The URL to the progress image

    Example context (json):
    {
        "progressimg": "/report/myfeedback/pix/progress.gif"
    }

}}

<div id="wait" class="progress-spinner">
    <img src="{{progressimg}}" alt="progress image"/>
</div>
{{#js}}
    require(['jquery'], function($) {
        $("body").css("cursor", "progress");
    });
{{/js}}
